<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!--region Экран настроек -->
    <!--Стиль для элемента в экране настройки-->
    <style name="PerfectDay.SettingsItemStyle" parent="">
        <item name="android:background">@drawable/bg_setting</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="PerfectDay.ButtonLogoutVkStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/PerfectDay.CornerRadiusButtonWith10</item>
    </style>

    <style name="PerfectDay.CornerRadiusButtonWith10" parent="">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>
    <!--endregion-->


    <style name="BaseTextStyle" parent="">
        <item name="android:textColor">?attr/text_color_primary_to_primary_app</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="CardHeaderStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/text_size_standard_header</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="counterEnabled">true</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconCheckable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PerfectDay.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="PerfectDay.RoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/button_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/button_corner_radius</item>
    </style>

</resources>