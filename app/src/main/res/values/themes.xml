<resources>

    <!-- LIGHT application theme. -->
    <style name="Theme.PerfectDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_text_color</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="background_holiday_item">@color/color_primary</item>z
        <item name="bottom_nav_pressed_icon_color">@color/primary_text_color</item>
        <item name="holiday_text_color">@color/white</item>
        <item name="item_menu_color">@color/primary_text_color</item>
        <item name="background_item">@color/white</item>
        <item name="text_color_primary_to_primary_app">@color/primary_text_color</item>
        <item name="text_color_primary_to_white">@color/primary_text_color</item>
        <item name="text_color_fact_of_the_day">@color/grey_text_color</item>
        <item name="text_color_not_checked_button">@color/primary_text_color</item>
        <item name="text_color_checked_button">@color/white</item>
        <item name="dialog_fragment_background">@color/background</item>
    </style>

    <style name="PerfectDay.MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/primary_text_color</item>
    </style>


    <!-- FOR ANDROID < 11 -->
    <style name="Theme.PerfectDaySplashScreenTheme" parent="Theme.PerfectDay">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
