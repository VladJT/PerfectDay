<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reminder_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large_xx"
        app:cardCornerRadius="@dimen/card_corner_radius_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/color_primary"
        app:strokeWidth="1dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/reminder_tab_layout"
            android:layout_width="220dp"
            android:layout_height="38dp"
            app:tabBackground="@drawable/tabs_selector"
            app:tabGravity="fill"

            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorColor="@color/primary_text_color"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="1dp"

            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/text_color_in_buttons_group" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/reminder_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminder_card_view" />


</androidx.constraintlayout.widget.ConstraintLayout>